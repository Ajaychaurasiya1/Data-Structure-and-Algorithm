#include <assert.h>
#include <ctype.h>
#include <limits.h>
#include <math.h>
#include <stdbool.h>
#include <stddef.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{
 int n;
 int m=1;
 scanf("%d",&n);
 for(int i=n;i>=1;i--)
  {
      for(int j=1;j<=i-1;j++)
      {
          printf(" ");
      }
      for(int k=1;k<=m;k++)
      {
          printf("#");
      }
      printf("\n");
      m++;
  }
      return 0;
}

